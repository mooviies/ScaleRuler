<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.Group?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.mooviies.scaleruler.SRController">
    <padding>
        <Insets/>
    </padding>

    <center>
        <ScrollPane fx:id="scrollPane" pannable="true">
            <Group fx:id="imageGroup">
                <ImageView fx:id="imageView" preserveRatio="true"/>
                <!-- Overlay pane to capture clicks and render measurement graphics -->
                <Pane fx:id="overlayPane"/>
            </Group>
        </ScrollPane>
    </center>
    <top>
        <HBox alignment="CENTER_RIGHT" spacing="8.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets top="8.0" right="12.0" left="12.0"/>
            </padding>
            <Label fx:id="totalLabel" text="Total: 0 units"/>
        </HBox>
    </top>
    <bottom>
        <Button fx:id="openButton" text="Open" onAction="#onOpenButtonClick"
                BorderPane.alignment="CENTER"/>
    </bottom>
</BorderPane>
